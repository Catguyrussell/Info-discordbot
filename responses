import random

def get_response(message: str) -> str:
    p_message = message.lower() 
    
    if p_message == 'hello':
       return 'kowdy'
       
    if p_message == 'rolld20':
       return str(random.randint(1, 20))
       
    if p_message == '!help':
       return '`you need help`'
       
    return 'didn/t hear you'
